<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="4dp"
    app:cardMaxElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linear_card_bottom"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_issue_pr_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tv_issue_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_card_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_issue_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_background"
                android:drawableStart="@drawable/ic_account_circle_24dp"
                android:drawableLeft="@drawable/ic_account_circle_24dp"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:maxLines="1"
                android:text="User"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_issue_patch_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_background"
                android:drawableStart="@drawable/ic_out_24dp"
                android:drawableLeft="@drawable/ic_out_24dp"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:inputType="text"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:text="User"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>